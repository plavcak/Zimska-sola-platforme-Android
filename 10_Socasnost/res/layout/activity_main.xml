<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android1:max="100"
        android1:progress="50" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android1:max="100"
        android1:progress="50" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="100"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android1:id="@+id/buttonStartServiceDoSto"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Start count to 100" />
    
    <Button
        android1:id="@+id/buttonStartService"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Start count" />

    <Button
        android1:id="@+id/buttonStopService"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Stop count" />
    
    <Button
        android1:id="@+id/buttonAsyncTask"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Start AsyncTask" />
    
     <Button
        android1:id="@+id/buttonDelavec"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Delavec" />

</LinearLayout>